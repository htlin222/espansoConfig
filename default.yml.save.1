# espanso configuration file

# This is the default configuration file, change it as you like it You 
# can refer to the official documentation: https://espanso.org/docs/

# Matches are the substitution rules, when you type the "trigger" string 
# it gets replaced by the "replace" string.
matches:
  # Simple text replacement
  -
    trigger: ":espanso"
    replace: "Hi there!"
  -
    trigger: "yee"
    replace: "🦎"
  -
    trigger: ";x;"
    replace: "❌"
  -
    trigger: ";o;"
    replace: "⭕"
  -
    trigger: ";check;"
    replace: "☑️"
  -
    trigger: ";thumb;"
    replace: "👍"
  -
    trigger: "newtri"
    replace: "\";$|$;\",\"{{clipboard}}\""
    vars:
      - name: "clipboard"
        type: "clipboard"
  -
    trigger: ";fever;"
    replace: "🌡️ 發燒 "
  -
    trigger: ";mx;"
    replace: "💊 治療 "
  -
    trigger: ";flu;"
    replace: "🤒 感染"
  -
    trigger: ";pe;"
    replace: "🏋️ 理學檢查 "
  -
    trigger: ";lab;"
    replace: "🧪 Lab 檢查 "
  -
    trigger: ";se;"
    replace: "👻 副作用"
  -
    trigger: ";nb;"
    replace: "🚨 注意"
  -
    trigger: ";rx;"
    replace: "💉 用藥"
  -
    trigger: ";bac;"
    replace: "🦠"
  -
    trigger: ";pulm;"
    replace: "🫁"
  -
    trigger: ";neuro;"
    replace: "🧠"
