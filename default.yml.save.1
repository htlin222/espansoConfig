  -
    trigger: ";flow;"
    replace: |
            ```mermaid
            graph TD;
            A[$|$];
            B[left];
            C[right];
            A-->B;A-->C;
            ```

  - trigger: "ccard"
    replace: "#🧠 *Q&A* $|$ →→ "
  # Dates
  - trigger: ":date"
    replace: "{{mydate}}"
    vars:
      - name: mydate
        type: date
        params:
          format: "%Y/%m/%d"

  # Shell commands
  - trigger: ":shell"
    replace: "{{output}}"
    vars:
      - name: output
        type: shell
        params:
          cmd: "echo Hello from your shell"

